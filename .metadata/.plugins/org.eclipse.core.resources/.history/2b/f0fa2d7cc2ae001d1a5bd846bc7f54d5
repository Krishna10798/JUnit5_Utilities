package com.testing;

import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

class MathUtilsTest {

	@Test
	void testAddition() {
		MathUtils mathUtils=new MathUtils();
		int excepted =20;
		int actual=mathUtils.add(19, 1);
		assertEquals(excepted, actual,"this method should add two integer number...");
	}
	@Test
	void testcircleArea() {
		MathUtils mathUtils=new MathUtils();
		double excepted =3.14*10*10;
		double actual=mathUtils.computeCircleArea(10);
		assertEquals(excepted, actual,"this method should return area of circle...");
	}

}
